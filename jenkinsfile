node {
    stage('Build') {
	git changelog: false, poll: false, url: 'https://github.com/erasmussen39/tomcat-hello-world.git', branch: 'xld'
        sh 'mvn clean package'
    }
    
    stage('Deploy') {
        sh("echo use xld...")
    }
    
    stage('Test') {
        sh('''RESULT=$(wget --server-response http://localhost:8888/tomcat-hello-world/ 2>&1 | awk \'/^  HTTP/{print $2}\')
        echo ${RESULT}
        if [ ${RESULT} -ne 200 ]
        then
            exit 1
        else
            exit 0
        fi''')
    }

    stage('Teardown') {
        sh("echo use xld...")
    	deleteDir()
    }
}

